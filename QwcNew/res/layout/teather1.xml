<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000" >

    <ImageView
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="top|right"
        android:adjustViewBounds="true"
        android:src="@drawable/close"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/boyss"
                android:layout_width="match_parent"
                android:layout_height="286dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/boyss"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/girlss"
                android:layout_width="match_parent"
                android:layout_height="286dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/girlss"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="286dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/welcome" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/selboy"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/pop_boy_button" />

                <ImageView
                    android:id="@+id/selgirl"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/pop_girl_button" />
            </LinearLayout>

            <ImageView
                android:id="@+id/zhuce"
                android:layout_width="140dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/zhuce"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>